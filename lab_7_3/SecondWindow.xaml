<Window x:Class="lab_7_3.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_7_3"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Добавление товара" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="32" Margin="285,80,0,0" TextWrapping="Wrap" Text="Добавление товара" VerticalAlignment="Top" Width="160"/>
        <TextBox x:Name="newItemNameBox" HorizontalAlignment="Left" Height="26" Margin="285,117,0,0" TextWrapping="Wrap" Text="Название товара" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="newItemShopBox" HorizontalAlignment="Left" Height="26" Margin="285,164,0,0" TextWrapping="Wrap" Text="Название магазина" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="newItemPriceBox" HorizontalAlignment="Left" Height="26" Margin="285,216,0,0" TextWrapping="Wrap" Text="Цена товара (в грн)" VerticalAlignment="Top" Width="120"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="269,270,0,0" VerticalAlignment="Top" Width="157" Click="Button_Click"/>
    </Grid>
</Window>