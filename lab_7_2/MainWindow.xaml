        <Button Content="Создать матрицу" HorizontalAlignment="Left" Margin="22,65,0,0" VerticalAlignment="Top" Width="153" Click="Button_Click"/>
        <TextBlock x:Name="BaseMatrix" HorizontalAlignment="Left" Margin="22,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="220" Width="338"/>
        <Button Content="Создать производную матрицу" HorizontalAlignment="Left" Margin="22,111,0,0" VerticalAlignment="Top" Width="245" Click="Button_Click_1"/>
        <TextBlock x:Name="Matrix" HorizontalAlignment="Left" Margin="420,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="287" Width="362"/>
    </Grid>
</Window>
